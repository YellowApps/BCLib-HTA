<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=9">
  <style>
	body{
		background: #4a3ea0;
		color: black;
		cursor: default;
		padding: 2px;
		font: 18px Arial;
	}
  </style>
  <title id="ttl"></title>
  <hta:application 
  id=app
  applicationName=bclib
  caption=yes
  innerBorder=yes
  selection=no
  scroll=no
  contextmenu=no
  navigable=yes 
  icon="bclib.ico" />
  <script src="wscript.js"></script>
  <script>resize(800, 600)</script>
</head>
<body>
	<div id="desktop"></div>
	<div id="windows"></div>
	<script src="bclib.js"></script>
	<script>
		if(app.commandLine.split("exec=")[1]){
			eval(app.commandLine.split("=")[1]);
		}else{
			bclib.desktop();
			if(bclib.storage["autorun.bc"]){
				bclib.file.run("autorun.bc");
			}
		}
		ttl.innerHTML = bclib.version;
	</script>
</body>
</html>
